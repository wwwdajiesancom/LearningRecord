<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds" debug="false">
	<contextName>pbstalk</contextName>

	<property name="encoderCharset" value="utf-8" />
	<property name="consoleLogPath" value="/data/tomcat/talk/console.log" />
	<property name="consoleEncoderPattern"
		value="%date{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n" />

	<property name="fileLogPath" value="/data/tomcat/talk/file.log" />
	<property name="fileEncoderPattern"
		value="[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%5level] [%thread] %logger{0} %msg%n" />

	<property name="rollingLogPath" value="/data/tomcat/talk/rolling.log" />
	<property name="rollingLogPathPattern" value="/data/tomcat/talk/rolling-%d{yyyy-MM-dd}.log" />
	<property name="rollingEncoderPattern"
		value="[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%5level] [%thread] %logger{0} %msg%n" />
	
	<property name="payCallbackLogPath" value="/data/tomcat/talk/pay_callback.log" />
	<property name="payCallbackLogPathPattern" value="/data/tomcat/talk/pay_callback-%d{yyyy-MM-dd}.log" />
	<property name="payCallbackEncoderPattern"
		value="[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%5level] [%thread] %logger{0} %msg%n" />
	
	<property name="rollingLogPathZip" value="/data/tomcat/talk/rolling_zip.log" />
	<property name="rollingLogPathPatternZip"
		value="/data/tomcat/talk/rolling_zip-%d{yyyy-MM-dd}.%i.log.zip" />
	<property name="rollingEncoderPatternZip"
		value="[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%5level] [%thread] %logger{0} %msg%n" />
	
	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<target>System.out</target>
		<encoder>
			<pattern>${consoleEncoderPattern}</pattern>
			<charset>${encoderCharset}</charset>
		</encoder>
	</appender>
	
	<appender name="file" class="ch.qos.logback.core.FileAppender">
		<file>${fileLogPath}</file>
		<append>true</append>
		<prudent>false</prudent>
		<encoder>
			<Pattern>${fileEncoderPattern}</Pattern>
			<charset>${encoderCharset}</charset>
		</encoder>
	</appender>

	<appender name="rolling"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<encoder>
			<Pattern>${rollingEncoderPattern}</Pattern>
			<charset>${encoderCharset}</charset>
		</encoder>
		<file>${rollingLogPath}</file>
		
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${rollingLogPathPattern}</fileNamePattern>
			<maxHistory>3660</maxHistory>
			<totalSizeCap>3GB</totalSizeCap>
		</rollingPolicy>
	</appender>

	<appender name="pay_callback"
			class="ch.qos.logback.core.rolling.RollingFileAppender">
		<encoder>
			<Pattern>${payCallbackEncoderPattern}</Pattern>
			<charset>${encoderCharset}</charset>
		</encoder>
		<file>${payCallbackLogPath}</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${payCallbackLogPathPattern}</fileNamePattern>
			<maxHistory>3660</maxHistory>
			<totalSizeCap>3GB</totalSizeCap>
		</rollingPolicy>
	</appender>

	<root level="debug">
		<appender-ref ref="console" />
	</root>

</configuration>